{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["node", "vitest/globals", "jest", "@testing-library/jest-dom"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    },

    // Optional strictness and quality flags
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src", "eslint.config.js", "src/__tests__"]
}